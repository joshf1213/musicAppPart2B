@model MusicFall2016.Models.Artist

@{ViewData["Title"] = "Edit"; }

<h2>Edit Artist</h2>

<form class="form-horizontal" method="post">
    <fieldset>
        <input type="hidden" asp-for="ArtistID">
        <div class="form-group">
            <label for="Title" class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input asp-for="Name" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="Artist" class="col-md-2 control-label">Bio</label>
            <div class="col-md-10">
                <input asp-for="Bio" type="text" class="form-control">
            </div>
        </div>
    </fieldset>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" class="btn btn-primary btn-danger">Submit</button>
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
